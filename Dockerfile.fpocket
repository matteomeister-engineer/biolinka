FROM ubuntu:22.04

# Install build tools and git
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    ca-certificates \
    wget && \
    rm -rf /var/lib/apt/lists/*

# Clone and build fpocket
RUN git clone https://github.com/Discngine/fpocket.git /opt/fpocket && \
    cd /opt/fpocket && \
    make && \
    make install

# Work inside /workspace (this is where we will mount your project)
WORKDIR /workspace
